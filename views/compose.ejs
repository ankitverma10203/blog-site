<%- include("partials/header"); -%>

  <form class="" action="/compose" method="post">
    <h1>Compose</h1>
    <div class="form-group">
      <label><h3>Title</h3></label>
      <input class="form-control" type="text" name="title" onkeydown="return event.key != 'Enter';" required>
      <label><h3>Content</h3></label>
      <textarea class="form-control" name="content" rows="8" cols="80"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
  </form>

<%- include("partials/footer"); -%>
